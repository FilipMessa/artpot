{
  "env": {
    "jest": true
  },
  "parser": "babel-eslint",
  "plugins": ["flowtype"],
  "extends": [
    "airbnb",
    "prettier",
    "prettier/react",
    "prettier/standard",
    "plugin:flowtype/recommended"
  ],
  "rules": {
    "react/require-default-props": 0,
    "no-shadow": ["error", { "allow": ["theme"] }],
    "react/jsx-filename-extension": ["error", { "extensions": [".js"] }],
    "flowtype/require-valid-file-annotation": [
      "error",
      "always",
      {
        "annotationStyle": "line"
      }
    ]
  }
}
